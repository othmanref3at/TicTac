
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"

    android:orientation="vertical"
    android:weightSum="1"
    android:background="#18000000"
    android:id="@+id/sdfgsdfg">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"


        >



        <TextView
            android:id="@+id/Txtnumberyy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:text="Tic-Tac-Toe!"
            android:textColor="#A0A0A0"
            android:textSize="@dimen/abc_action_bar_progress_bar_size"
            android:scaleType="fitCenter"
            android:background="#00666545"
            android:layout_margin="5dp"
            android:layout_weight="1" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".4"


        android:weightSum="2">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            android:layout_weight=".5">


            <Button
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                android:textColor="#A0A0A0"
                android:textSize="@dimen/abc_action_bar_default_height_material"
                android:gravity="center"
                android:fontFamily="@string/abc_searchview_description_clear"
                android:background="#C8C8C8"
                android:layout_weight="30"
                android:layout_margin="8dp"
                 />
            <Button
                android:id="@+id/bt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                android:textColor="#A0A0A0"
                android:textSize="@dimen/abc_action_bar_default_height_material"
                android:gravity="center"
                android:background="#C8C8C8"
                android:layout_weight="30"
                android:layout_margin="8dp"
                android:onClick="onclic2" />
            <Button
                android:id="@+id/bt3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                android:textColor="#A0A0A0"
                android:textSize="@dimen/abc_action_bar_default_height_material"
                android:background="#18000000"
                android:layout_weight="30"
                android:gravity="center"
                android:layout_margin="8dp"
                android:onClick="On_CLik3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_weight=".5">

            <Button
                android:id="@+id/bt4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                android:textColor="#A0A0A0"
                android:textSize="@dimen/abc_action_bar_default_height_material"
                android:gravity="center"
                android:background="#18000000"
                android:layout_weight="30"
                android:layout_margin="8dp"
                android:onClick="On_CLik4" />
            <Button
                android:id="@+id/bt5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"

                android:textColor="#A0A0A0"
                android:textSize="@dimen/abc_action_bar_default_height_material"
                android:scaleType="fitCenter"

                android:gravity="center"
                android:background="#18000000"
                android:layout_weight="30"
                android:layout_margin="8dp"
                android:onClick="On_CLik5" />
            <Button
                android:id="@+id/bt6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"


                android:textColor="#A0A0A0"
                android:textSize="@dimen/abc_action_bar_default_height_material"
                android:gravity="center"
                android:background="#18000000"
                android:layout_weight="30"
                android:layout_margin="8dp"
                android:onClick="On_CLik6" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_weight=".5">

            <Button
                android:id="@+id/bt7"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"


                android:textColor="#A0A0A0"
                android:textSize="@dimen/abc_action_bar_default_height_material"
                android:gravity="center"
                android:background="#18000000"
                android:layout_weight="30"
                android:layout_margin="8dp"
                android:onClick="On_CLik7"/>
            <Button
                android:id="@+id/bt8"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"


                android:textColor="#A0A0A0"
                android:textSize="@dimen/abc_action_bar_default_height_material"
                android:background="#18000000"
                android:layout_weight="30"
                android:gravity="center"
                android:layout_margin="8dp"
                android:onClick="On_CLik8" />
            <Button
                android:id="@+id/bt9"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"


                android:textColor="#A0A0A0"
                android:textSize="@dimen/abc_action_bar_default_height_material"
                android:background="#18000000"
                android:layout_weight="30"
                android:gravity="center"
                android:layout_margin="8dp"
                android:onClick="On_CLik9" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_weight="2">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/Txtnumber"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="left"
                android:text="Your Lost!Score is"
                android:textColor="#A0A0A0"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:scaleType="fitCenter"
                android:background="#00666545"
                android:layout_margin="8dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>